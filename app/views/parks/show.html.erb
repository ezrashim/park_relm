<h1><%= @park.title%></h1>
  <%= @park.location %>
  <%= @rating %>

<ul>
  <% if @park.bathroom%>
    <li>
      Bathrooms available
    </li>
    <%end%>
  <% if @park.picnic%>
    <li>
      Picnic facilities available
    </li>
    <%end%>
  <% if @park.pets%>
    <li>
      Pets allowed
    </li>
  <%end%>
  <% if @park.basketball%>
    <li>
      basketball courts available
    </li>
  <%end%>
  <% if @park.baseball%>
    <li>
      Baseball field available
    </li>
  <%end%>
</ul>

<% if user_signed_in? %>
  <div>
    <%= link_to 'Update', edit_park_path(@park) %>
  </div>
<% end %>

<% if current_user.present? && current_user.admin? %>
  <div>
    <%= link_to 'Delete!', park_path(@park), method: "delete" %>
  </div>
<% end %>

<ul>
  <% @park.reviews.each do |review|%>
    <% if !review.id.nil?%>
      <li class="inline-list">
        <%= review.title %></br>
        <%= review.rating %>
        <div>
            <%= link_to 'Edit', edit_park_review_path(@park, review)%>
            <%= link_to 'Delete Review', park_review_path(@park, review), method: :delete%>
        </div>
        <div>
          <%= review.body %>
        </div>
        <hr>
      </li>
    <% end %>
  <% end %>
</ul>

<% if user_signed_in? %>
<h3>Add a Review:</h3>
<div>
<%= render "reviews/form" %>
</div>
<% end %>
