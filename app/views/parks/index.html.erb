<h1>Parks</h1>

<% if user_signed_in? %>
  <%= link_to "New Park", new_park_path %>
<% end %>

<ul>
    <% @parks.each do |park| %>
  <li>
      <%= link_to park.title, park_path(park) %>
      <%= park.location %>
      <%= park.reviews.average(:rating) %>
  </li>
    <% end %>
</ul>

<%= paginate @parks %>
